<% cache @host_requests do %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="longer-profile-block col-md-12">
          <h2>Admin</h2>
          <div class="row">
            <div class="col-md-12">
              <%= link_to "All Reservations", admin_reservations_path, class: "btn btn-default" %>
              <%= link_to "All Users", admin_users_path, class: "btn btn-default" %>
            </div>
          </div>

          <% unless @host_requests.empty? %>
          <hr>
          <div class="row">
            <div class="col-md-12">
              <h3>Host Requests</h3>
              <%= render partial: "partials/host_requests", locals: {host_requests: @host_requests} %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
