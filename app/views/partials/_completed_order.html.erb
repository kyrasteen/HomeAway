<% cache reservation do %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Property</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% reservation.properties.uniq.each do |property| %>
        <% cache property do  %>
        <tr class="cart_property cart_property_<%= property.id %>">
          <td class="title"><%= link_to property.title, property_path(property) %></a></td>
          <td class="daily_rate">$<%= property.daily_rate %></td>
          <td class="quantity"><%= property.quantity %></td>
          <td class="subtotal">$<%= reservation.subtotal(property) %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td>Status: <%= reservation.status %></td>
        <td>Reserved: <%= reservation.created_at %></td>
        <td>Updated: <%= reservation.updated_at %></td>
        <td>Total: $<%= reservation.total %></td>
      </tr>
    </tfoot>
  </table>
<% end %>
