<% cache 'sign-up-form' do %>
  <a href="#" class="btn btn-default" data-toggle="modal" data-target="#myModal">
    Sign Up
  </a>


  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Sign up for an account</h3>
        </div>
        <div class="modal-body">

            <div class="edit-form better-edit-display">
              <%= form_for @user, url: users_path do |f| %>
                <div class="new-user-form">
                  <div class="form-group">
                    <%= f.text_field :name, placeholder: "Full Name", class: "modal-form form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :email_address, placeholder: "Email Address", class: "modal-form form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :display_name, placeholder: "(Optional) Display Name", class: "modal-form form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password", class: "modal-form form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "modal-form form-control" %>
                  </div>
                   <div class="form-group">
                     <%= f.check_box :host, class: "modal-form" %>
                     <%= f.label "I'd like to become a host" %>
                   </div>
                   <div class="hidden" id="host-message">
                     <%= label_tag :message, "Tell us about yourself" %><br>
                     <%= text_area_tag :message, nil, size: "70x5", class: "modal-form form-control" %><br>
                   </div>
                  <div class="actions">
                    <%= f.submit "Create User", class: "btn btn-default" %>
                  </div>
                </div>
              <% end %>
            </div>

        </div>
      </div>
    </div>
  </div>
<% end %>