<% if property.primary %>
  <a href="#" data-toggle="modal" data-target="#PhotoViewer">
    <div class="property-img-main" style="background-image: url(<%= asset_path(property.hero_image) %>)">
      <i id="img-left" class="fa fa-angle-left"></i>
      <i id="img-right" class="fa fa-angle-right"></i>
    </div>
  </a>
<% else %>
  <a href="#" data-toggle="modal" data-target="#PhotoViewer">
  <div class="property-img-main" style="background-image: url(https://placekitten.com/g/1280/768)"></div></a>
<% end %>
<div class="modal fade" id="PhotoViewer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Property Images</h3>
        <br>
      </div>
      <div class="modal-body">

        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <% if property.primary %>
                <%= image_tag property.primary.image_file_name %>
              <% end %>
            </div>
            <% property.other_photos.each do |photo| %>
              <div class="item">
                <%= image_tag photo.image_file_name %>
              </div>
            <% end %>

            <h1>
              <a class="pull-left" href="#carousel-example-generic" role="button" data-slide="prev">
                <i class="fa fa-angle-double-left"></i>
                <a href="#carousel-example-generic" role="button" data-slide="next" class="pull-right">
                  <i class="fa fa-angle-double-right"></i>
                </a>
              </h1>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
