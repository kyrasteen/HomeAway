<% cache 'login-modal' do %>
  <a href="#" data-toggle="modal" data-target="#myModalLogIn" id="log-in" class="btn btn-default">
    Log In
  </a>


  <div class="modal fade" id="myModalLogIn" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Log into your account</h3>
        </div>
        <div class="modal-body">
          <div class="edit-form">
            <div class='form-group new-user-form'>
              <%= form_tag login_path do %>
                <%= text_field_tag :email_address, nil, placeholder: "email address", class: "modal-form form-control" %><br>
                <%= password_field_tag :password, nil, placeholder: "password", class: "modal-form form-control" %><br>
                <%= submit_tag "Login", class: "btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
